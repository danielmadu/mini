extends layout

block content
  h1= title

  form(method="post",action= "/generate")
    fieldset
      legend Insira uma url
      p
        label(for="url") URL:
        input(type="text", name="url")

      p.buttons
        input(type="submit", value="Gerar")

  h2 Listas de urls encurtadas
  ul#urls
    each url ,key in map
      li #{key} #{url}